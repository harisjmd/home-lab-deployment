global:
  scrape_interval: 15s
  evaluation_interval: 15s

  # Attach these labels to any time series or alerts when communicating with
  # external systems (federation, remote storage, Alertmanager).
  external_labels:
    monitor: "docker-host-alpha"

# Load and evaluate rules in this file every 'evaluation_interval' seconds.
# rule_files:
#   - "alert.rules"

# A scrape configuration containing exactly one endpoint to scrape.
scrape_configs:
  - job_name: "node"
    scrape_interval: 5s
    static_configs:
      - targets: ["nodeexporter:{{ nodeexporter_port }}"]
        labels:
          service: "{{ vault_nas_hostname }}"
      - targets: ["{{ vault_hassio_ip }}:{{ vault_nodeexporter_port }}"]
        labels:
          service: "{{ vault_hassio_hostname }}"
      - targets: ["{{ vault_ckaccess_ip }}:{{ vault_nodeexporter_port }}"]
        labels:
          service: "{{ vault_ckaccess_hostname }}"

  - job_name: "cadvisor"
    scrape_interval: 5s
    static_configs:
      - targets: ["cadvisor:{{ cadvisor_port }}"]
        labels:
          service: "{{ vault_nas_hostname }}"
      - targets: ["{{ vault_hassio_ip }}:{{ remote_cadvisor_port }}"]
        labels:
          service: "{{ vault_hassio_hostname }}"
      - targets: ["{{ vault_ckaccess_ip }}:{{ remote_cadvisor_port }}"]
        labels:
          service: "{{ vault_ckaccess_hostname }}"

  - job_name: "prometheus"
    scrape_interval: 10s
    static_configs:
      - targets: ["localhost:{{ prometheus_port }}"]

